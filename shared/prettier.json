{
  "$schema": "https://json.schemastore.org/prettierrc.json",
  "endOfLine": "auto",
  "overrides": [
    { "files": "*.hbs", "options": { "parser": "markdown" } },
    { "files": [".lintstagedrc"], "options": { "parser": "json" } },
    { "files": ".npmrc", "options": { "parser": "markdown" } }
  ],
  "printWidth": 100,
  "singleQuote": true,
  "trailingComma": "none"
}
