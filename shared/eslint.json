{
  "$schema": "https://json.schemastore.org/eslintrc.json",
  "extends": "lifion",
  "ignorePatterns": ["coverage", "node_modules", "package-lock.json"],
  "rules": {
    "jsdoc/require-jsdoc": "error"
  },
  "overrides": [
    {
      "files": ["*.test.js", "**/__mocks__/**/*.js"],
      "rules": {
        "jsdoc/require-jsdoc": "off"
      }
    }
  ]
}
